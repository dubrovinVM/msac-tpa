@model msac_tpa_new.ViewModels.LoginModel
@{
    ViewData["Title"] = @Resources.Actions.Login;
}
<h1 class="title">@Resources.Actions.Login</h1>
<hr />

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div class="row">
        <div class="col-lg-4 col-md-6 col-sm-10 col-xs-10">
            <div class="form-group">
                <label asp-for="Email">@Resources.Spans.EnterEmail</label>
                <input type="text" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" />
            </div>
            <div class="form-group">
                <label asp-for="Password">@Resources.Spans.EnterPassword</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" />
            </div>
            <div class="form-group">
                <input type="submit" value="@Resources.Actions.Enter" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>
